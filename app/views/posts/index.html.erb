<h1>News</h1>

<% @posts.each do |post| %>
<table class="posts">

  <tr>
    <td class="post_title">
		<%= link_to post.title, post %>
		<br />
		<span class="timestamp">
			Posted <%= time_ago_in_words(post.created_at) %> ago.
		</span>
	</td>
  </tr>
  <tr>
	<td class="post">
		<%= post.body %>
	</td>
  </tr>	
</table>

<% end %>

<center>
	<%= will_paginate %>
</center>

<br />

<center>
	<%= link_to 'New Post', new_post_path %>
</center>